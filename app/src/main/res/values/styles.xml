<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">@dimen/font_26</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WideBtnStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_26</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleDialog" parent="AppTheme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="StyleTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="tabMode">fixed</item>
        <item name="tabPaddingStart">-2dp</item>
        <item name="tabPaddingEnd">-2dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabTextAppearance">@style/StyleTabLayoutText</item>
    </style>

    <style name="StyleTabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="font">montserrat_regular</item>
    </style>


    <style name="StyleTabLayoutFavSetting" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:background">@android:color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
        <item name="tabPaddingStart">-2dp</item>
        <item name="tabPaddingEnd">-2dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabTextAppearance">@style/StyleTabLayoutTextFavSetting</item>
    </style>

    <style name="StyleTabLayoutTextFavSetting" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="font">montserrat_regular</item>
    </style>

    <style name="DialogStyleChatPreview" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="ButtonTransparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/normal_size</item>
    </style>

