    <style name="ProgressDialogTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StyleTvLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="StyleTvRegularFont" parent="StyleTvLight">
        <item name="font">montserrat_regular</item>
    </style>

    <style name="StyleTvMediumFont" parent="StyleTvLight">
        <item name="font">montserrat_bold</item>
    </style>

    <style name="StyleTvLightFont" parent="StyleTvLight">
        <item name="font">montserrat_Light</item>
    </style>

    <style name="StyleTvLightSizeSmall" parent="StyleTvLight">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="StyleTvLightSizeRegular" parent="StyleTvLight">
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="StyleTvDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="StyleTvDarkSizeSmall" parent="StyleTvDark">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="StyleTvDarkSizeRegular" parent="StyleTvDark">
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="StyleTvDarkShade">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextDarkShade</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="StyleTvDarkShadeSizeSmall" parent="StyleTvDarkShade">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="StyleTvDarkShadeSizeRegular" parent="StyleTvDarkShade">
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>
    <style name="CropTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>
</resources>
