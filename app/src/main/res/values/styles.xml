    <!-- Common Input Layout Style -->
    <style name="StyleAppInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/small_size</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="hintTextAppearance">@style/TextLabel</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Common EditText Style -->
    <style name="StyleAppEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/small_size</item>
        <item name="android:drawablePadding">@dimen/medium_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:background">@null</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLength">50</item>
        <item name="font">montserrat_regular</item>
    </style>

