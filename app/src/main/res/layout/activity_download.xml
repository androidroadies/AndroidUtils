<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.common.example.DownloadActivity">

    <Button
        android:id="@+id/download_activity_btn_filesize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/download_activity_btn_download"
        android:layout_alignRight="@+id/download_activity_btn_download"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#009688"
        android:padding="10dp"
        android:text=" Get file size"
        android:textColor="@android:color/white"
        android:textSize="22sp" />


    <Button
        android:id="@+id/download_activity_btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_activity_btn_filesize"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="#009688"
        android:padding="10dp"
        android:text="Download file"
        android:textColor="@android:color/white"
        android:textSize="22sp" />


</RelativeLayout>
